<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="mercadopago_paymentmagento_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderBase</item>
                <item name="mercadopago_paymentmagento_cc_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderCc</item>
                <item name="mercadopago_paymentmagento_cc_vault_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\Vault\ConfigProvider</item>
                <item name="mercadopago_paymentmagento_checkout_pro_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderCheckoutPro</item>
                <item name="mercadopago_paymentmagento_payment_methods_off_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderPaymentMethodsOff</item>
                <item name="mercadopago_paymentmagento_pix_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderPix</item>
                <item name="mercadopago_paymentmagento_pse_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderPse</item>
                <item name="mercadopago_paymentmagento_webpay_config_provider" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\ConfigProviderWebpay</item>
            </argument>
        </arguments>
    </type>
    <type name="MercadoPago\PaymentMagento\Block\Sales\Info\Card">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="MercadoPago\PaymentMagento\Block\Sales\Info\CheckoutPro">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="MercadoPago\PaymentMagento\Block\Sales\Info\PaymentMethodsOff">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="MercadoPago\PaymentMagento\Block\Sales\Info\Pix">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="MercadoPago\PaymentMagento\Block\Sales\Info\Webpay">
        <arguments>
            <argument name="data" xsi:type="array">
                <item xsi:type="string" name="is_secure_mode">1</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Payment\Model\CcGenericConfigProvider">
        <arguments>
            <argument name="methodCodes" xsi:type="array">
                <item name="mercadopago_paymentmagento_cc" xsi:type="const">MercadoPago\PaymentMagento\Gateway\Config\ConfigCc::METHOD</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Vault\Model\Ui\TokensConfigProvider">
        <arguments>
            <argument name="tokenUiComponentProviders" xsi:type="array">
                <item name="mercadopago_paymentmagento_cc" xsi:type="object">MercadoPago\PaymentMagento\Model\Ui\TokenUiComponentProvider</item>
            </argument>
        </arguments>
    </type>
</config>
