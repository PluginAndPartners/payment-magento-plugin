<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="mercadopago_paymentmagento_payment_methods_off" translate="label comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
        
        <label>Offline Payments Methods</label>

        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="0">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/mercadopago_paymentmagento_payment_methods_off/active</config_path>
        </field>
       
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Title</label>
            <config_path>payment/mercadopago_paymentmagento_payment_methods_off/title</config_path>
        </field>

        <field id="expiration" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Deadline for payment</label>
            <comment>Calendar days.</comment>
            <validate>required-entry validate-number</validate>
            <config_path>payment/mercadopago_paymentmagento_payment_methods_off/expiration</config_path>
        </field>

        <field id="exclude-payment-methods" translate="label comment" type="multiselect" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="0">
            <label>Exclude Payment Methods</label>
            <comment>Select the payment methods you do NOT want to accept.</comment>
            <source_model>MercadoPago\PaymentMagento\Model\Adminhtml\Source\MercadoPagoOff</source_model>
            <config_path>payment/mercadopago_paymentmagento_payment_methods_off/payment_methods</config_path>
        </field>
    
        <field id="sort_order" translate="label comment" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Sort Order</label>
            <comment>Sets up in which order the payment methods will be shown at the Checkout.</comment>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/mercadopago_paymentmagento_payment_methods_off/sort_order</config_path>
        </field>
    </group>
</include>
